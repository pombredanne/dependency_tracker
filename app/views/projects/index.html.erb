<h1>Listing projects</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Gem home</th>
    <th>% Approved</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @projects.each do |project| %>
  <tr>
    <td><%= project.name %></td>
    <td><%= project.gem_home %></td>
    <td><%= ((project.dependencies.where(approved: true).count.to_f / project.dependencies.count.to_f) * 100).to_i %> % </td>
    <td><%= link_to 'Show', project %></td>
    <td><%= link_to 'Edit', edit_project_path(project) %></td>
    <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

